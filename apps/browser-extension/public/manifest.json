{
  "name": "Marathon",
  "description": "Run tasks in browser",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_title": "Open Marathon",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/icon@16.png",
      "32": "/images/icon@32.png",
      "48": "/images/icon@48.png",
      "128": "/images/icon@128.png"
    }
  },
  "icons": {
    "16": "/images/icon@16.png",
    "48": "/images/icon@48.png",
    "128": "/images/icon@128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": ["activeTab", "scripting"]
}
